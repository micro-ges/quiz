<table>
    <form action="quizes" method="get">
    	<tr class="border_bottom">
    		<td colspan="2">
    			<p><b>Buscar en preguntas </b></p>
    			<input type="text" name="search" placeholder="Texto a buscar"/>
    			<input type="submit" value="Buscar" />
    			<br>
    		</td>
    	</tr>
    	<tr>
    		<td><p><b>Preguntas</b></p></td>
            <td><p><b>Tema</b></p></td>
    	</tr>
    </form>
	<% var i; for (i=0; i < quizes.length; i++) { %>        
		<tr>
			<td><a href="quizes/<%= quizes[i].id %>"><%= quizes[i].pregunta %></a></td>
            <td><a href="quizes/<%= quizes[i].id %>"><%= quizes[i].tema %></a></td>
            <%if(session.user){%>
                <td><a href="quizes/<%= quizes[i].id %>/edit"><button>editar</button></a></td>
                <td><form method="post" action="quizes/<%= quizes[i].id %>?_method=delete"><button type="submit" onClick="return confirm('Borrar: <%= quizes[i].pregunta %>'); ">borrar</button></form></td>
            <%}%>
		</tr> 
	<% } %>
    <%if(session.user){%>
        <tr class="border_top"><td colspan="2"><a href="/quizes/new"><button type="button">Crear pregunta</button></a></td></tr>
    <%}%>
</table>